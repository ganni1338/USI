@using USI_Project.Models
@model IEnumerable<InventoryModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inventory</title>
</head>
<body>
    @using (Html.BeginForm("Index", "Inventory", FormMethod.Post))
    {
        <input type="submit" value="Get Users" />
    }
    @if (Model.Count() > 0)
    {
        <hr />
        <table cellpadding="0" cellspacing="0" border="1">
            <tr>
                <th>Property</th>
                <th>Value</th>
            </tr>
            @foreach (InventoryModel Inventory in Model)
            {
                <tr>
                    <td>@Inventory.Property</td>
                    <td>@Inventory.Value</td>
                </tr>
            }
        </table>
    }
</body>
</html>
